@model ProjetoFinal.Models.Compra

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Compra</h4>
    <hr />
    <dl class="row">
        <dt class= "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class= "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.CPF)
        </dt>
        <dd class = "col-sm-10">
            @Model.Cliente.MostrarCPF()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormaPagamento)
        </dd>
        <dt class= "col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class= "col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class= "col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.PrecoUnit)
        </dt>
        <dd class= "col-sm-10">
            @Html.DisplayFor(model => model.Produto.PrecoUnit)
        </dd>
    </dl>
</div>
<div class="form-group d-grid gap-2 d-md-block mt-3">
    <a asp-action="Index" class="btn btn-secondary ms-3">Voltar</a>
</div>

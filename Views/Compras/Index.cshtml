@model IEnumerable<ProjetoFinal.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Compras</h1>

<p class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-cart-plus-fill"></i> Adicionar</a>
</p>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormaPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto.PrecoUnit)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @item.Cliente.MostrarCPF()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormaPagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.PrecoUnit)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CompraID" class="btn btn-info"><i class="bi bi-info-circle-fill"></i> Info</a> |
                    <a asp-action="Delete" asp-route-id="@item.CompraID" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
